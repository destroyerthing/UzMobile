<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="140dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#228BD6"
        android:orientation="vertical">


        <TextView
            android:id="@+id/rate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/bold_sf"
            android:text="Деловой"
            android:textColor="#FFD12D"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="9dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_yellow_ellipse"

                android:src="@drawable/ic_small_phone"

                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@drawable/ic_yellow_ellipse"

                android:src="@drawable/ic_small_earth"

                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/ic_yellow_ellipse"

                android:src="@drawable/ic_small_message"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:id="@+id/tv_rate_min"
                android:layout_marginEnd="33dp"
                android:fontFamily="@font/semibold_sf"


                android:text="20 MIN"
                android:textColor="#FFD12D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"

                android:id="@+id/tv_rate_mb"
                android:fontFamily="@font/semibold_sf"
                android:text="20 MB"
                android:textColor="#FFD12D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rate_sms"
                android:layout_marginStart="33dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/semibold_sf"

                android:text="20 SMS"

                android:textColor="#FFD12D" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/semibold_sf"
            android:text="20 000 сум в месяц"
            android:textColor="#68D2FF" />


    </LinearLayout>


</androidx.cardview.widget.CardView>