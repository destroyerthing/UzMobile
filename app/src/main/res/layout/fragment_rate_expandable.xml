<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01B4FF"
    android:orientation="vertical"
    tools:context=".fragments.RateExpandableFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#01B4FF"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_arrow_left" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/regular_sf"
            android:text="Tariflar"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_yellow_long_rectangle"
            android:text="Tarifni tekshirish"
            android:fontFamily="@font/regular_sf"
            android:layout_marginStart="34dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#B08E15" />
    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/expandable_white_listview_background">


        <ExpandableListView
            android:id="@+id/expandable_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:padding="16dp"
            android:scrollbars="none">

        </ExpandableListView>


    </LinearLayout>


</LinearLayout>